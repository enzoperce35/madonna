<div class="container">

  <% @sales_today.each do |sale| %>
     <% sale_num = "sale #" + sale.sale_number.to_s %>
     <% warehouse = sale.sale_number.nil? %>
    
     <p style="font-style: italic;">
      <em style="color: lightseagreen;"><%= sale.created_at.strftime('%H:%M:%S') %></em>&nbsp&nbsp
      <% if warehouse %>
        <em style="color:orangered"><%= sale.editor %></em> checked out <%= link_to 'Warehouse Items', sale_path(sale) %>
      <% else %>
        <em style="color:orangered"><%= sale.editor %></em> added <%= link_to sale_num, sale_path(sale) %>
      <% end %>
      
      
      <% if !sale.admin_note.nil? %>
         ~ need <em style="text-decoration:underline">admin actions</em>
      <% elsif !sale.note.blank? && !sale.note.nil?%>
        with note
      <% end %>
    </p>
  <% end %>
  </div>