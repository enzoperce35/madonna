<div class="container" id="main-receipt">
  <div style="text-align: right;">
    <h4>
      <% if user_is_admin? %>
        <em style="font-size:small; color:red;"><%= @sale.admin_note %></em>
        <%= link_to '[X]', sale_path(@sale), method: 'delete', data: {confirm: 'are you sure you want to delete this sale?'} %>
      <% else %>
        <%= link_to '[X]', delete_request_path(@sale), method: 'get', data: {confirm: 'send delete request to admin?'} %>
      <% end %>
    </h4>
  </div>
  
  <%= render 'sales/receipt_header' %>
  
  <p class="dot-lines">........................................................................................</p>
  
  <%= render 'sales/receipt_body' %>
  
  <p class="dot-lines">........................................................................................</p>
    
  <%= render 'sales/receipt_footer' %>
</div>
