<% elem = {} %>
<% price = [] %>


<div class="parent-container d-flex">
  <div class="container" id='links'>
    <div>
      <% if !@orders.nil? %>
        <% @orders.each do |o| %>
          <p class="prod-links"><%= link_to o.name, orders_path(o), data: { disable_with: "Please wait..." } %></p><br>
          <% elem.store(o.name, o.multiplier) %>
          <% price << o.price %>
        <% end %>
      <% end %>
    </div>
    <div>
      <% @product.each do |p| %>
        <p class="prod-links"><%= link_to p.name, orders_path(p), data: { disable_with: "Please wait..." } %></p><br>
      <% end %>
    </div>
  </div>
  
  <div id = 'receipt' class="container">
    <% if @total > 0 %>
    <div class="container" id='test'>
    <p style="margin-top: 20px;"><%= Date.today.strftime("%B %d, %Y") %><br>Sale #<%= @sale_number %></p>
    <hr class="solid-line">
      <div class="parent_container d-flex">
        <div class="container" class="orders" >
          <% elem.keys.each do |k|%>
            <p><%= k %></p>
          <% end %>
          <strong><p>TOTAL</p></strong>
        </div>
        
        
        <div class="container" id="orders">
          <% elem.values.each_with_index do |v, i|%>
            <% p = price[i] * v %>
            <p>X<%= v %>&nbsp&nbsp&nbsp&nbsp<%= p %></p>
          <% end %>
          
          <p>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= link_to @total, alter_total_path, method: 'get'  %></p>
        </div>
      </div>
        <hr class="solid-line" style="margin-top: 0%; margin-bottom: 30px;">
        
        
      </div>

      
       <div class="sale-buttons">
        <%= button_to "Discard", discard_path, method: 'get', class: "btn-outline-primary btn-sm" %>
      </div>
      <div class="sale-buttons">
        <%= button_to 'Confirm Order', sales_path, method: 'post', class: "btn-outline-primary btn-sm" %>
      </div>
      
      
      
      
      <div>
        
      <div>
        
      <% end %>
      
        
        
        
      
     
    </div>
    
  
  </div>
  