<div class="container center">
  <h3 style="color: rgb(111, 240, 25);">
    <strong><%= @product.name %></strong>
    <%= link_to '[x]', product_path(@product), method: 'delete', data: {confirm: 'Are you sure you want to delete this ingredient?'}%>
  </h3>
  <p>
    price: <%= @product.price %>
  </p>  
  <p>
    category: <%= @product.category %>
  </p>
  <%= link_to 'Edit ?', edit_product_path(@product), {:class => "btn btn-outline-secondary btn-sm"} %><br><br>
</div>
    